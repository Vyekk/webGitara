{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "outDir": "./dist",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "src",
        "typeRoots": ["./src/types", "./node_modules/@types"],
    },
    "include": ["src/**/*.ts", "server.ts"],
    "exclude": ["node_modules"]
}
